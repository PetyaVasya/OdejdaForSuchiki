<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.MainActivityUI"
    android:background="@color/backgroundcolor"
    android:visibility="visible">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/for_recommendation_list"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/date"
        android:layout_width="170sp"
        android:outlineSpotShadowColor="#000000"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="5"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/city_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/date"
        android:textColor="#000"
        android:textSize="35sp" />


    <ImageView
        android:id="@+id/weather_cloud"
        android:layout_width="170sp"
        android:layout_height="150sp"
        android:src="@color/backgroundcolor"
        android:layout_below="@+id/date" />

    <TextView
        android:id="@+id/temperature"
        android:layout_width="80sp"
        android:textAlignment="center"
        android:layout_height="50dp"
        android:text=""
        android:layout_below="@+id/weather_cloud"
        android:layout_marginLeft="45dp"
        android:textColor="#000"
        android:textSize="40sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recommendation_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#000"
        android:layout_below="@+id/city_name"
        android:layout_toRightOf="@+id/weather_cloud" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/for_recommendation_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/recommendation_list"
        android:layout_below="@+id/temperature"
        android:textColor="#000" />

    <Spinner
        android:id="@+id/city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progress_bar"
        android:layout_alignParentStart="true" />
</RelativeLayout>